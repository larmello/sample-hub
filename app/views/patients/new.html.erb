<%= simple_form_for @patient do |f| %>
<%= f.input :first_name, label: "Nome" %>
<%= f.input :last_name, label: "Sobrenome" %>
<%= f.input :gender, collection: ["M", "F"], label: "Sexo" %>
<%= f.input :born_at, as: :string, label: "Data de nascimento (xx/xx/xxxx)" %>
<%= f.input :address, label: "Endereço" %>
<%= f.input :cpf, label: "CPF (apenas números)" %>
<%= f.input :sus_code, label: "Cartão SUS (apenas números)" %>
<%= f.label "Tipo de paciente" %>
<%= f.input :patient_type do %>
  <%= radio_button_tag "patient_type", 'receptor' %> Receptor
  <%= radio_button_tag "patient_type", 'donor' %> Doador
<% end %>
<%= f.submit "Enviar" %>
<% end %>