<div class="container my-4">
  <h2>Remessa <%= @batch.sender.institution %> - <%= @batch.id %></h2>
  <div>
    <% if @batch.received_at %>
      <p>Situação: Recebida</p>
    <% elsif @batch.sent_at %>
      <p>Situação: Enviada</p>
    <% else %>
      <p>Situação: Pendente</p>
    <% end %>
    <p>Enviada em <%= date_mask(@batch.sent_at) %></p>
    <p>Recebida em <%= date_mask(@batch.received_at) %></p>
    <p><%= @samples.count %> amostras </p>
  </div>

  <%# ini list of samples %>
  <div class="card">
    <table class="table table-hover align-bottom">
      <thead>
        <tr>
          <th scope="col">ID</th>
          <th scope="col">Nome</th>
          <th scope="col">Tipo</th>
          <th scope="col">Coletada em</th>
          <th scope="col">Ações</th>
        </tr>
      </thead>
      <tbody>
        <% @samples.reverse.each do |sample| %>
          <tr>
            <th scope="row"><%= sample.id %></th>
            <td><%= "#{sample.patient.first_name} #{sample.patient.last_name}" %></td>
            <% if Family.where(receptor: sample.patient).count > 0 %>
              <td>Receptor</td>
            <% elsif Family.where(donor: sample.patient).count > 0 %>
              <td>Doador</td>
            <% else %>
              <td>Não aparentado</td>
            <% end %>
            <td><%= date_mask(sample.collected_at) %></td>
            <td>
              <%= link_to icon('fas','edit'), edit_sample_path(sample) %>
              <%= link_to icon('fas','ban'), batch_path(@batch) %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

</div>
